<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cimdata.android.dez2017.masterdetail.fragments.MasterFragment"
    >

    <!-- TODO: Update blank fragment layout -->


    <ListView
        android:id="@+id/list_frmaster_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    </ListView>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/id_fragment_master_search_frame"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@android:color/holo_blue_bright"
        android:visibility="gone"
        >

        <Button
            android:id="@+id/id_button_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Go"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/id_text_search"
            app:layout_constraintTop_toTopOf="parent"
            />

        <EditText
            android:id="@+id/id_text_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Search Notes"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.094"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
    </android.support.constraint.ConstraintLayout>

</FrameLayout>
